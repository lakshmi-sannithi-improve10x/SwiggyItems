<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/biryani_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        tools:srcCompat="@drawable/biryani_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/biryani_iv"
        android:layout_alignTop="@id/biryani_iv"
        android:layout_marginTop="20dp"
        android:background="#F8F6F6"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/outline_delivery_dining_24" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delivery on" />

        <TextView
            android:id="@+id/day1_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="."
            android:textColor="#E80808" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/biryani_iv"
        android:layout_alignRight="@id/biryani_iv"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/baseline_favorite_border_241" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/biryani_iv"
        android:layout_alignBottom="@id/biryani_iv"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="#B70C0C0C"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/photo_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personname_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="#F8F6F6" />

            <TextView
                android:id="@+id/address_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="#FAF9F9" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/biryani_iv"
        android:layout_alignBottom="@id/rating_ll"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:background="#B4151515"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usually Reples with in"
            android:textColor="#F6F3F3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="12min"
            android:textColor="#21AF27"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rating_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/biryani_iv"
        android:layout_alignBottom="@id/biryani_iv"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:background="#AD0B0A0A"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_star_24" />

        <TextView
            android:id="@+id/rating_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4.8/5"
            android:textColor="#FDFCFC"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>